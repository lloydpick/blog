
  <div class="group">
    <%= f.label :Parent, t("activerecord.attributes.category.parent_id", :default => "Parent"), :class => :label %>
    <%= tree_select(Category.all(:conditions => "parent_id = 0"), 'category', 'parent_id', current_object).html_safe %>
    <span class="description">What is this categories parent?</span>
  </div>

  <div class="group">
    <%= f.label :Name, t("activerecord.attributes.category.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :Permalink, t("activerecord.attributes.category.permalink", :default => "Permalink"), :class => :label %>
    <%= f.text_field :permalink, :class => 'text_field' %>
    <span class="description">Can be adjusted, but is auto generated</span>
  </div>

  <div class="group">
    <%= f.label :Description, t("activerecord.attributes.category.description", :default => "Description"), :class => :label %>
    <%= f.text_field :description, :class => 'text_field' %>
    <span class="description">A short description, currently not used anywhere</span>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>  
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", admin_categories_path, :class => "button" %> 
</div>