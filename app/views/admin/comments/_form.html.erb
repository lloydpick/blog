  <div class="group">
    <%= f.label :Post, t("activerecord.attributes.comment.post", :default => "Post"), :class => :label %>
    <%= f.select :post_id, Post.published.all.collect{|c| [c.title, c.id]}, :class => 'text_field' %>
    <span class="description">The post the comment was made on</span>
  </div>

  <div class="group">
    <%= f.label :Author, t("activerecord.attributes.comment.author", :default => "Author"), :class => :label %>
    <%= f.text_field :author, :class => 'text_field' %>
    <span class="description">The comment authors name</span>
  </div>

  <div class="group">
    <%= f.label :Author_url, t("activerecord.attributes.comment.author_url", :default => "Author url"), :class => :label %>
    <%= f.text_field :author_url, :class => 'text_field' %>
    <span class="description">Used as a link on the authors name</span>
  </div>

  <div class="group">
    <%= f.label :Author_email, t("activerecord.attributes.comment.author_email", :default => "Author email"), :class => :label %>
    <%= f.text_field :author_email, :class => 'text_field' %>
    <span class="description">Not displayed publically</span>
  </div>

  <div class="group">
    <%= f.label :Content, t("activerecord.attributes.comment.content", :default => "Content"), :class => :label %>
    <%= f.text_field :content, :class => 'text_field' %>
    <span class="description">The comment itself</span>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>  
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", admin_comments_path, :class => "button" %> 
</div>