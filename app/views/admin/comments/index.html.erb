<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_comments_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_comment_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Comments</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>
            <%= t("activerecord.attributes.admin_comment.post_id", :default => t("activerecord.labels.post_id", :default => "Post Title")) %>
          </th>
          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @comments.each do |comment| -%>
          <tr class="<%= cycle("odd", "even") %>">
            <td>
              <%= comment.id %>
            </td>
            <td>
              <%= link_to comment.post.title, admin_comment_path(comment) %>
            </td>
            <td>
              <%= comment.created_at %>
            </td>
            <td class="last">
              <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_comment_path(comment) %> |
              <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_comment_path(comment) %> |
              <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_comment_path(comment), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
            </td>
          </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

        <%= will_paginate @comments  %>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>